pipeline {
  
  agent any
  
  stages {
    
    stage("Build") {
    
      steps {
        echo 'building the application....'
        echo 'today is saturday'
      }
    }
     stage("Test") {
    
      steps {
        echo 'testing the application....'
      }
    }
     stage("Deploy") {
    
      steps {
        echo 'deploying the application....'
      }
    }
    stage("Result") {
    
      steps {
        echo 'Success...'
      }
    }
  }
}
  
  
   
